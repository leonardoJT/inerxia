   PUT UNFORMATTED vcimpcptdesc SKIP.
   CHR(27) + CHR(18) + CHR(80) + CHR(12). /* 10 cpi*- Salto Pagina*/
 END.
ELSE
  IF P_Valor GT 0 AND P_vctipo NE "1" THEN /* Desembolsos*/
     DO:
      DISPLAY 
        Ano                        AT ROW 3  COL 60 FORMAT "X(4)"    /* 34 */ /*+26*/
